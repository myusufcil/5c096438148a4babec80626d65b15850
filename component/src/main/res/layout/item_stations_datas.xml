<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clRootView"
    android:layout_margin="@dimen/material_24dp"
    android:background="@drawable/bg_item_stations_root_radius"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/material_12dp">

    <TextView
        android:id="@+id/tvNeedStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000/1000"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEusCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_8dp"
        android:text="242EUS"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tvNeedStock"
        app:layout_constraintStart_toStartOf="@+id/tvNeedStock"
        app:layout_constraintTop_toBottomOf="@+id/tvNeedStock" />

    <ImageButton
        android:id="@+id/ibFav"
        android:layout_width="@dimen/material_48dp"
        android:layout_height="@dimen/material_48dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/material_12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStationNameLastEusCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_20dp"
        android:paddingBottom="@dimen/material_12dp"
        android:text="YZCRFJ - 246"
        android:textColor="@color/black"
        android:textSize="@dimen/material_24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEusCount" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_12dp"
        android:background="@drawable/bg_item_stations_btn_radius"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/material_12dp"
        android:text="Travel"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStationNameLastEusCount" />

</androidx.constraintlayout.widget.ConstraintLayout>
